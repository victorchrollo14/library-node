        </div>
        <form action="/" method="post" class="form scale-up-center">
          <input
            type="text"
            name="title"
            id="title"
            placeholder="title"
            required
          />
          <input
            type="text"
            name="author"
            id="author"
            placeholder="author"
            required
          />
          <input
            type="number"
            name="pages"
            id="pages"
            placeholder="Pages"
            required
          />
          <div class="read-section">
            <label class="check">Have you read it?</label>
            <input type="checkbox" name="read_status" id="read_status" />
          </div>
          <input type="submit" value="Submit" />
        </form>
        <div class="book-list-wrapper">
          <button class="new-book btn">+ Add Book</button>
          <section class="book-list">
